ServiceDefRepository DomainPTU version 1.0 {
	RequestAnswerServiceDefinition MovePTUQueryService {
		QueryPattern <
			RequestType = DomainPTU.CommPTUMoveRequest
			AnswerType = DomainPTU.CommPTUMoveResponse
		>
	}
	
	RequestAnswerServiceDefinition PTUStateQueryService {
		QueryPattern <
			RequestType = CommBasicObjects.CommVoid
			AnswerType = DomainPTU.CommMobilePTUState
		>
	}
	
	JoiningServiceDefinition MovePTUSendService {
		SendPattern <DataType=DomainPTU.CommPTUMoveRequest>
	}
	
	ForkingServiceDefinition GoalEventService {
		EventPattern < 
			ActivationType=DomainPTU.CommPTUGoalEventParameter
			EventType=DomainPTU.CommPTUGoalEventResult
			EventStateType=DomainPTU.PTUGoalEventState
		> 
	}
	
	CoordinationServiceDefinition PTUCoordinationService {
		ParameterPattern < DomainPTU.PTUParameter >
		StatePattern < lifecycle ComponentLifecycle with DomainPTU.PTUStates >
		CommunicationServiceUsage ptupose uses MovePTUSendService
		CommunicationServiceUsage ptuevent uses GoalEventService
		}
}
